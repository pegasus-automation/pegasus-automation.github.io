---
import List from '~/components/List.astro';
import Swiper from '~/components/Swiper.astro';
import Table from '~/components/Table.astro';
import Headline from '~/components/ui/Headline.astro';
import Breadcrumbs from '~/components/Breadcrumbs.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'SSD1306 I2C OLED Display',
  subtitle: 'Monochrome OLED Display for Embedded Applications',
};

const images = ['/images/SSD1306-1.jpg', '/images/SSD1306-2.jpg'];

const introduction = `The SSD1306 is a popular OLED display controller for monochrome 128x64 pixel displays. It communicates over I2C and is widely used in embedded systems for displaying simple graphics and text.`;

const featureList = [
  '128x64 monochrome resolution',
  'I2C interface (also supports SPI)',
  'Low power consumption',
  'Wide viewing angles',
];

const specifications = [
  { label: 'Supply Voltage', value: '3.3V - 5V' },
  { label: 'Interface', value: 'I2C, SPI' },
  { label: 'Display Size', value: ' 0.96” - 1.3”' },
];

const references = [
  {
    label: 'SSD1306 Datasheet',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
  {
    label: 'Display Driver Library',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
  {
    label: 'OLED Display Guide',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
];
const applicationList = ['Embedded display systems', 'Wearable devices', 'Consumer electronics'];
---

<Layout metadata={metadata}>
  <div class="py-8 max-w-5xl mx-auto px-8 flex flex-col gap-10">
    <Breadcrumbs
      labelLinkArray={[
        { label: 'Home', link: '/' },
        { label: 'Products', link: '#' },
        { label: metadata.title, link: '#' },
      ]}
    />

    <div class="flex flex-col-reverse md:flex-row gap-10">
      <Swiper images={images} />
      <div class="max-w-sm gap-3 flex flex-col">
        <h2 class="text-3xl font-bold">{metadata.title}</h2>
        <h2 class="text-xl">{metadata.subtitle}</h2>
        <p class="">{introduction}</p>
      </div>
    </div>

    <div class="py-10 gap-20">
      <p class="">{introduction}</p>

      <List title="Key Features" list={featureList} />
      <List title="Applications" list={applicationList} />

      <Table title="Specifications" data={specifications} />
      <Table title="Documents & Resources" data={references} />
    </div>
  </div>
</Layout>
